
/* Form Label */
@labelDistance: @4px;
@labelMargin: 0em 0em @labelDistance 0em;
@labelFontSize: @relativeSmall;
@labelFontWeight: normal;
@labelTextTransform: none;
@labelColor: @textColor;

@selectPadding: (@inputVerticalPadding + ((1em - @inputLineHeight) / 2)) @inputHorizontalPadding;

@inputBorderRadius: 0;

@gutterWidth: 0.5em;
@rowDistance: 0.5em;